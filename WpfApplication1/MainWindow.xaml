<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Účetnictví" Height="658.893" Width="1165.258">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top" Background="Gainsboro">
            <MenuItem Header="File" Height="25">
                <MenuItem x:Name="loadFile" Header="Load File" Height="25" Click="loadFiles"></MenuItem>
                <MenuItem x:Name="End" Header="End" Height="25" Click="endProgram"></MenuItem>
            </MenuItem>
        </Menu>
        <Button Content="New Item" HorizontalAlignment="Center" Margin="0,0,450,0" VerticalAlignment="Center" Width="225" Height="70" Click="newItem"/>
        <Button Content="List Items" HorizontalAlignment="Center" Margin="450,0,0,0" VerticalAlignment="Center" Width="225" Height="70" Click="listItems"/>
    </Grid>
</Window>
